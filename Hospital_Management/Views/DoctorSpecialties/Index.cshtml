@model IEnumerable<Hospital_Management.Models.DoctorSpecialty>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Doctor Specializations</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-success">Add Doctor Specialization</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="text-center">
            <th>Doctor Name</th>
            <th>Specialization</th>
            <th>Modify</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Doctor.Name</td>
                <td>@obj.Specialty.SpecialtyName</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@obj.DoctorSpecialtyID" class="btn btn-primary mx-2">
                            <i class="bi bi-pen-fill"></i>Edit
                        </a>

                        <button type="button" class="btn btn-danger mx-2" onclick="ConfirmationAlert('@Url.Action("Delete", "DoctorSpecialties", new { id = obj.DoctorSpecialtyID })')">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
