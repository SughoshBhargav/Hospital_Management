@{
    var userType = Context.Session.GetString("UserType");
}
@if(userType == "Admin")
{
    <div class="list-group">
        <a asp-controller="Admin" asp-action="Index" class="list-group-item">Users</a>
        <a asp-controller="Specialties" asp-action="Index" class="list-group-item">Speciality</a>
        <a asp-for="" class="list-group-item">Patient</a>
        <a asp-for="" class="list-group-item">Appointment</a>
        <a asp-controller="Doctors" asp-action="Index" class="list-group-item">Doctors</a>
        <a asp-controller="DoctorSpecialties" asp-action="Index" class="list-group-item">DoctorsSpeciality</a>
    </div>
}
@if(userType == "Patient")
{
    <div class="list-group">
        <a asp-controller="Appointments" asp-action="Index" class="list-group-item">Register as Patient</a>
        <a asp-controller="Patients" asp-action="Index" class="list-group-item">Appointment</a>
        <a asp-controller="Doctors" asp-action="Index" class="list-group-item">Doctors</a>
        
    </div>
}


